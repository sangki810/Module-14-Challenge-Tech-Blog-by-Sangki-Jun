<section class="hero is-dark is-fullheight">
  {{#each posts as |post| }}
  <div class="box m-5">
    <h2>
      <a class="subtitle has-text-info" href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>{{post.post_text}}</p>
    <div class="is-pulled-right">
      <a class="button is-normal is-responsive is-info is-outlined" id="edit-post">Edit</a>
      <button class="button is-normal is-responsive is-info is-outlined" id="delete-post">Delete</button>
    </div>
    <p class="pt-5">Posted by {{post.user.username}} on {{format_date post.date_created}}</p>
  </div>
  {{/each}}
</section>